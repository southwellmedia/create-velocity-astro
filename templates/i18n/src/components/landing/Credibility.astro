---
/**
 * Credibility Component (i18n-aware)
 * CLI showcase section with translations
 */
import Icon from '@/components/ui/Icon.astro';
import { type Locale, defaultLocale, getLocaleFromPath } from '@/i18n/config';
import { useTranslations } from '@/i18n/index';

interface Props {
  locale?: Locale;
}

const { locale: localeProp } = Astro.props;
const locale = localeProp || getLocaleFromPath(Astro.url.pathname);
const t = useTranslations(locale);

const cliFlags = [
  { flag: '--demo', desc: 'Sample landing page + blog posts' },
  { flag: '--components', desc: '27 production-ready UI primitives' },
  { flag: '--i18n', desc: 'Multi-language routing configured' },
  { flag: '--pages', desc: 'Generate pages (+ i18n versions)' },
  { flag: '-y', desc: 'Skip prompts, use defaults' },
];

const stats = [
  { value: '1', label: 'command to start' },
  { value: '5', label: 'flags to customize' },
  { value: '27+', label: 'components available' },
];
---

<section id="architecture" class="bg-surface-invert text-on-invert py-24">
  <div class="mx-auto grid max-w-6xl grid-cols-1 items-center gap-12 px-6 lg:grid-cols-2 lg:gap-16">
    <!-- Left Column - Content -->
    <div class="order-2 lg:order-1">
      <!-- Badge -->
      <div
        class="text-brand-500 mb-4 flex items-center gap-2 text-sm font-bold tracking-wide uppercase"
      >
        <Icon name="terminal" size="sm" />
        <span>One Command</span>
      </div>

      <h2 class="font-display mb-6 text-3xl font-bold text-balance md:text-4xl">
        Scaffold exactly <span class="text-brand-500">what you need.</span>
      </h2>

      <div class="text-on-invert-secondary space-y-4 text-lg leading-relaxed">
        <p>
          Not every project needs everything. The Velocity CLI lets you pick your starting point.
        </p>
        <p>
          Need custom pages? Use <code class="font-mono text-base text-cyan-400">--pages</code> and they're generated with routes and nav already wired. Pair it with <code class="font-mono text-base text-cyan-400">--i18n</code> and you get localized versions too—translations scaffolded and ready.
        </p>
        <p class="text-on-invert-muted">
          No prompts to click through. No wizard to escape. Just flags that do what they say.
        </p>
      </div>

      <!-- Stats -->
      <div class="border-border-invert mt-10 grid grid-cols-3 gap-8 border-t pt-8">
        {
          stats.map((stat) => (
            <div>
              <div class="font-display text-on-invert text-3xl font-bold">{stat.value}</div>
              <div class="text-on-invert-muted text-sm">{stat.label}</div>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Right Column - Terminal Card -->
    <div class="relative order-1 lg:order-2">
      <div
        class="bg-surface-invert-secondary border-border-invert overflow-hidden rounded-lg border shadow-xl"
      >
        <!-- Terminal Header -->
        <div
          class="bg-surface-invert-tertiary border-border-invert flex items-center gap-2 border-b px-4 py-3"
        >
          <div class="flex gap-2">
            <span class="h-3 w-3 rounded-full bg-[#FF5F56]"></span>
            <span class="h-3 w-3 rounded-full bg-[#FFBD2E]"></span>
            <span class="h-3 w-3 rounded-full bg-[#27C93F]"></span>
          </div>
          <span class="text-on-invert-muted ml-2 font-mono text-xs">terminal</span>
        </div>

        <!-- Terminal Body -->
        <div class="p-5 font-mono text-sm leading-relaxed">
          <!-- Command Line -->
          <div class="mb-4 flex items-start gap-2">
            <span class="shrink-0 text-green-400 select-none">$</span>
            <div>
              <span class="text-on-invert">pnpm create </span>
              <span class="text-cyan-400">velocity-astro@latest</span>
              <span class="text-on-invert"> my-site</span>
            </div>
          </div>

          <!-- Comment -->
          <div class="text-on-invert-muted mb-3 pl-4"># Add what you need</div>

          <!-- Flags -->
          <div class="space-y-2 pl-4">
            {
              cliFlags.map((item) => (
                <div class="flex items-center gap-3">
                  <span class="shrink-0 font-semibold text-cyan-400">{item.flag}</span>
                  <span class="text-on-invert-muted"># {item.desc}</span>
                </div>
              ))
            }
          </div>

          <!-- Output -->
          <div class="border-border-invert mt-6 border-t pt-4">
            <div class="flex items-center gap-2">
              <span class="text-green-400">✓</span>
              <span class="text-on-invert">Project created successfully!</span>
            </div>
            <div class="text-on-invert-muted mt-1 pl-5">cd my-site && pnpm dev</div>
          </div>
        </div>
      </div>

      <!-- Decorative glow -->
      <div
        class="bg-brand-500/10 pointer-events-none absolute top-0 right-0 h-32 w-32 rounded-full blur-3xl"
      >
      </div>
    </div>
  </div>
</section>
